# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Hosts permitidos para acceder a Django directamente
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS - Or√≠genes permitidos para peticiones desde el navegador
# Permite que el frontend (SPA) haga peticiones a la API desde diferentes puertos/dominios
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Database Configuration
# DATABASE=default (uses SQLite for local development)
# DATABASE=postgresql (uses PostgreSQL/Aurora RDS)
DATABASE=default

# PostgreSQL/Aurora RDS Configuration (only needed when DATABASE=postgresql)
DB_NAME=studyflow
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=your-rds-instance.xxxxx.region.rds.amazonaws.com
DB_PORT=5432

# JWT Configuration
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=1

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION_NAME=eu-south-2

# AWS SES Configuration
AWS_SES_REGION_NAME=eu-west-3
AWS_SES_REGION_ENDPOINT=email.eu-west-3.amazonaws.com
DEFAULT_FROM_EMAIL=StudyFlow <noreply@polplana.work>

# S3 Storage Configuration (Optional - for file uploads)
# Set USE_S3=True to use AWS S3, or False/omit to use local storage
USE_S3=False
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=eu-south-2
